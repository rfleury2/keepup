<div class="panel panel-default contacts-panel center-block">
  <div class="panel-heading">My Contacts</div>
  <div class="panel-body">
    <% if @contacts.empty? %>
      <!-- EMPTY STATE GOES HERE -->
        No contacts yet.
    <% else %>
      <ul id='jq-contact-index'>
        <% @contacts.each do |contact| %>
          <li class='contact-list-item'><%= contact.name %> - <%= contact.email %></li>
        <% end %>
      </ul>
    <% end %>
    <div>
      <button id='jq-add-contact' class='btn btn-info add-contact-button'><i class='fa fa-plus'></i> Add contact</button>
      <div id='jq-new-contact' class='hidden'>
        <%= render partial: 'new' %>
      </div>
    </div>
  </div>
</div>